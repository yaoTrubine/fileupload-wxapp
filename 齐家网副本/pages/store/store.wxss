page{
    background-color: #f0f0f0;
}

.form{
    /*display: flex;*/
    background-color: #fff;
    padding-top: 10px;
    
}

input{
    border: 1px solid #F2F2F2;
    border-radius: 4px;  
    width: 100%;
    height: 60rpx;
    font-size: 12pt;  
    padding-left: 20rpx;
}

button {
    width: 95%;
    height: 60rpx;
    font-size: 10pt;  
    vertical-align: middle;
    line-height: 60rpx;
    background-color: #FF0000;
    color: #fff;
}



.section{
    margin: 0 auto;
    width: 95%;
    padding-bottom: 10px;
}
.sort {
    width: 100%;
    padding-bottom: 20px;
}

text{
    display: flex;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 9pt;
    color: #FF0000;
}

.picker{
    width: 50%;
    float: left;
    background-color: #fff;
    height: 70rpx;
    text-align: center;
    padding: 10rpx 0;
    border-top: 1px solid #F2F2F2;
    border-bottom: 1px solid #F2F2F2;
    border-right-color: #F2F2F2;
    border-right-style: solid;
    border-right-width: 0.1pt;
    box-sizing: border-box;
    
}
.picker:visited{
    color: #FF0000;
}

.icon{
    width: 34rpx;
    height: 34rpx;
    line-height: 50rpx;
 vertical-align:middle;
}

